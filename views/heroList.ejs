<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Superhero Database</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css"
      rel="stylesheet"
    />
    <link href="/css/style.css" rel="stylesheet" />
  </head>
  <body>
    <div class="container mt-4">
      <h1 class="mb-4">
        <i class="bi bi-stars me-2"></i>
        Superhero Database
      </h1>
      <% if (heroes && heroes.length > 0) { %>
      <div class="row">
        <% heroes.forEach(function(hero) { %>
        <div class="col-md-6 col-lg-4 mb-4" id="hero-<%= hero._id %>">
          <div class="card h-100 shadow-sm">
            <div class="card-body">
              <!-- Display Mode -->
              <div class="hero-display" id="display-<%= hero._id %>">
                <h5 class="card-title">
                  <i class="bi bi-mask me-2"></i>
                  <%= hero.superName %>
                </h5>
                <p class="card-text">
                  <strong>Real Name:</strong> <%= hero.realName %><br />
                  <strong>Power:</strong> <%= hero.superpower %><br />
                  <strong>Level:</strong>
                  <span class="badge bg-warning text-dark"
                    ><%= hero.powerLevel %>/10</span
                  ><br />
                  <strong>Secret Identity:</strong>
                  <% if (hero.secretIdentity) { %>
                  <i class="bi bi-lock-fill text-danger"></i> Yes <% } else { %>
                  <i class="bi bi-unlock-fill text-success"></i> No <% } %>
                </p>
                <div class="d-flex gap-2">
                  <button
                    class="btn btn-sm btn-outline-primary"
                    onclick="editHero('<%= hero._id %>')"
                  >
                    <i class="bi bi-pencil"></i> Edit
                  </button>
                  <button
                    class="btn btn-sm btn-outline-danger"
                    onclick="deleteHero('<%= hero._id %>')"
                  >
                    <i class="bi bi-trash"></i> Delete
                  </button>
                </div>
              </div>
              <!-- Edit Mode -->
              <div
                class="hero-edit"
                id="edit-<%= hero._id %>"
                style="display: none"
              >
                <input
                  type="text"
                  class="form-control mb-2"
                  id="superName-<%= hero._id %>"
                  value="<%= hero.superName %>"
                  placeholder="Super Name"
                />
                <input
                  type="text"
                  class="form-control mb-2"
                  id="realName-<%= hero._id %>"
                  value="<%= hero.realName %>"
                  placeholder="Real Name"
                />
                <input
                  type="text"
                  class="form-control mb-2"
                  id="superpower-<%= hero._id %>"
                  value="<%= hero.superpower %>"
                  placeholder="Superpower"
                />
                <input
                  type="number"
                  class="form-control mb-2"
                  id="powerLevel-<%= hero._id %>"
                  value="<%= hero.powerLevel %>"
                  min="1"
                  max="10"
                  placeholder="Power Level"
                />
                <div class="form-check mb-2">
                  <input type="checkbox" class="form-check-input"
                  id="secretIdentity-<%= hero._id %>" <%= hero.secretIdentity ?
                  'checked' : '' %>>
                  <label
                    class="form-check-label"
                    for="secretIdentity-<%= hero._id %>"
                    >Secret Identity</label
                  >
                </div>
                <div class="d-flex gap-2">
                  <button
                    class="btn btn-sm btn-success"
                    onclick="updateHero('<%= hero._id %>')"
                  >
                    <i class="bi bi-check"></i> Save
                  </button>
                  <button
                    class="btn btn-sm btn-secondary"
                    onclick="cancelEdit('<%= hero._id %>')"
                  >
                    <i class="bi bi-x"></i> Cancel
                  </button>
                </div>
              </div>
            </div>
          </div>
        </div>
        <% }) %>
      </div>
      <% } else { %>
      <div class="alert alert-info text-center">
        <i class="bi bi-info-circle me-2"></i>
        No heroes found. Add your first superhero!
      </div>
      <% } %>
      <div class="text-center mt-4">
        <a href="/" class="btn btn-primary btn-lg">
          <i class="bi bi-plus-circle me-2"></i>
          Add New Hero
        </a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/js/heroActions.js"></script>
  </body>
</html>
